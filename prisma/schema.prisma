// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String         @id @default(uuid())
  email       String         @unique
  createdAt   DateTime       @default(now()) @map("created_at")
  lastSearch  Json?         @map("last_search")
  preferences Json?         @map("preferences")
  searches    FlightSearch[]
  savedFlights SavedFlight[]

  @@map("users")
}

model FlightSearch {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  origin      Json
  destination Json
  dates       Json
  passengers  Json
  cabinClass  String   @map("cabin_class")
  createdAt   DateTime @default(now()) @map("created_at")
  results     Json?
  user        User     @relation(fields: [userId], references: [id])

  @@map("flight_searches")
}

model SavedFlight {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  flightData Json    @map("flight_data")
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id])

  @@map("saved_flights")
} 